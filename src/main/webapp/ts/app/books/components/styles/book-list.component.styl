.selected
  background-color #CFD8DC !important
  color white

.books
  margin 0 0 2em 0
  list-style-type none
  padding 0
  width 500px
  li
    cursor pointer
    position relative
    left 0
    background-color #EEE
    margin .5em
    min-height  40px
    border-radius 5px
    &.selected
      &:hover
        background-color #BBD8DC !important
        color white
    &:hover
      color #607D8B
      background-color #DDD
      left .1em
  .delete-icon
    float right
    margin 12px 10px 0 0
  .text
    position relative
    top -3px
  .badge
    display inline-block;
    font-size small;
    color white;
    padding 13px 0 0 0;
    background-color #607D8B;
    position relative;
    height 40px;
    width 90px;
    margin-right .8em;
    border-radius 4px 0 0 4px;
    text-align center;